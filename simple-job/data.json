{
  "metadata": {
    "name": "simple-job",
    "namespace": "argo"
  },
  "spec": {
    "backoffLimit": 0,
    "template": {
      "spec": {
        "restartPolicy": "Never",
        "containers": [
          {
            "name": "simple-job",
            "image": "perl:5.34.0",
            "command": [
              "perl"
            ],
            "args": [
              "-Mbignum=bpi",
              "-wle",
              "print bpi(2000)"
            ],
            "env": [
              {
                "name": "DEBUG",
                "value": "true"
              },
              {
                "name": "TEST",
                "value": "true"
              }
            ]
          }
        ]
      }
    }
  }
}